<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-request-assignments-table" author="bekezhan">
        <createTable tableName="request_assignments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="request_id" type="BIGINT">
                <constraints unique="true"/>
            </column>
            <column name="teacher_id" type="BIGINT"/>
            <column name="assigned_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="request_assignments"
                baseColumnNames="request_id"
                constraintName="fk_request_assignments_request_id"
                referencedTableName="service_requests"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="request_assignments"
                baseColumnNames="teacher_id"
                constraintName="fk_request_assignments_teacher_id"
                referencedTableName="teacher_profiles"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>